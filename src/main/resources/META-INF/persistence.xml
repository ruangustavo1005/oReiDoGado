<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
      <persistence-unit name="hibernatejpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>model.Animal</class>
        <class>model.Area</class>
        <class>model.Baixa</class>
        <class>model.Classificacao</class>
        <class>model.Cobertura</class>
        <class>model.Manejo</class>
        <class>model.Medicacao</class>
        <class>model.Medicamento</class>
        <class>model.Pesagem</class>
        <class>model.Raca</class>
        <class>model.TipoEntrada</class>
        <class>model.TransferenciaArea</class>
        <class>model.UnidadeMedida</class>
        <class>model.Usuario</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.default_schema" value="oreidogado"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/oreidogado"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.jdbc.wrap_result_sets" value="false"/>
            <property name="hibernate.hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
        
    </persistence-unit>
</persistence>
